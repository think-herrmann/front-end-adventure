{
  "name": "remark-textr",
  "version": "3.0.4",
  "description": "remark plugin to integrate with Textr",
  "license": "MIT",
  "keywords": [
    "unified",
    "remark",
    "plugin",
    "mdast",
    "markdown",
    "text",
    "typography",
    "typographic",
    "typo",
    "textr"
  ],
  "repository": "remarkjs/remark-textr",
  "bugs": "https://github.com/remarkjs/remark-textr/issues",
  "author": "Denys Dovhan <email@denysdovhan.com> (https://denysdovhan.com)",
  "contributors": [
    "Denys Dovhan <email@denysdovhan.com> (https://denysdovhan.com)",
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
    "Vladimir Starkov <iamstarkov@gmail.com>",
    "Andrey Polischuk <andre.polischuk@gmail.com>"
  ],
  "files": [
    "index.js"
  ],
  "dependencies": {
    "textr": "^0.3.0",
    "unist-util-visit": "^1.0.0"
  },
  "devDependencies": {
    "nyc": "^14.0.0",
    "prettier": "^1.14.2",
    "remark": "^10.0.0",
    "remark-cli": "^6.0.0",
    "remark-preset-wooorm": "^5.0.0",
    "tape": "^4.0.0",
    "typographic-ellipses": "^1.0.11",
    "typographic-quotes": "^2.0.1",
    "xo": "^0.24.0"
  },
  "scripts": {
    "format": "remark . -qfo && prettier --write \"**/*.js\" && xo --fix",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run format && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
